<!doctype html>
<html lang="en">

{% block head %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}{% endblock %}</title>
    </head>
{% endblock %}

{% block styles %}
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/styles.css"/>
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/styles2.css"/>
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/storestyle.css"/>
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/wishlist.css"/>
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/prova.css"/>

            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
            
            <!-- Favicon-->
        	<link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
        	<!-- Font Awesome icons-->
        	<script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
       		<!-- Google fonts-->
        	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        	<link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        	<!-- Core theme CSS (includes Bootstrap)-->
            <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/lpstyles.css"/>

            <!-- JQuery-->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

            <!-- Core theme JS-->
            <script src="{{ full_url_for('home') }}assets/js/ajax.js"></script>
        {% endblock %}

<body>
{% block header %}
    <!-- Navigation-->
        <nav class="navbar navbar-expand-md bg-secondary text-uppercase" id="mainNav"">
        <a href="http://localhost:8030/" class="navbar-brand">LSteam</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ml-auto">
                <a href="http://localhost:8030/" class="nav-item nav-link active">Home</a>
                <a href="http://localhost:8030/store" class="nav-item nav-link">Store</a>
                {% block instore %}
                <a href="http://localhost:8030/login" class="nav-item nav-link">Log in</a>
                {% endblock %}
            </div>
            {% block profilelogo %}
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="/uploads/image_{{formImg.uuid}}.png" width="40" height="40" class="rounded-circle">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    
                    <a class="dropdown-item" href="http://localhost:8030/profile">My Profile</a>
                    <a class="dropdown-item" href="http://localhost:8030/user/friends">My Friends</a>
                    <a class="dropdown-item" href="http://localhost:8030/user/myGames">My games</a>
                    <a class="dropdown-item" href="http://localhost:8030/user/wallet">My Wallet</a>
                    <a class="dropdown-item" href="http://localhost:8030/user/wishlist">Wishlist</a>
                    <form action = "/logout" method = "post">
                        <button class="dropdown-item text-danger" style="width: 100px; height: 50px;">LOG OUT</button>
                    </form>
                    </div>
                </li>   
            </ul>
            {% endblock %}
        </div>
    </nav>
{% endblock %}

{% block content %}
    <p>{{app.request.query.get('token')}}</p>
{% endblock %}

{% block footer %}
        <footer class="footer text-center" style="margin-top:auto;">
            <div class="container">
                <div class="row">
                    <!-- Footer Location-->
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Location</h4>
                        <p class="lead mb-0">
                            La Salle Campus Barcelona
                            <br />
                            Sant Joan de la Salle, 42
                        </p>
                    </div>
                    <!-- Footer Social Icons-->
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Around the Web</h4>
                        <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-linkedin-in"></i></a>
                        <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-dribbble"></i></a>
                    </div>
                    <!-- Footer About Text-->
                    <div class="col-lg-4">
                        <h4 class="text-uppercase mb-4">About La Salle</h4>
                        <p class="lead mb-0">
                            International university campus offering different type of studies. 
                            <p><a href="https://www.salleurl.edu/en">La Salle</a>.</p>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
{% endblock %}
</body>

</html>
