{% extends "base.twig" %}
{% block title %} Wallet {% endblock %}
{% block instore %}{% endblock %}
{% block content %}
    {% if warnings %}
        <div class="alert alert-primary position-absolute" role="alert" style="max-width:300px; top:120px; right:20px; opacity: 0.7;">
           {{warnings.added}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <body style = "min-height: 100vh; display: flex; flex-direction:column;">
        <div class="signup-form">   
            <form id="login-form" method="POST">
                <div class="form-group">
                    <p>Hi, your balance is:</p>
                    <h1>{{ data.money }}$<h1>
                </div>
                <div class="form-group">
                    <p>Add money to your wallet here</p>
                    <input type="text" class="form-control" placeholder="amount" name="amount" required="required">
                    {% if errors.zero %}
                        <p style="color: #ff6347;">{{ errors.zero }}</p>
                    {% endif %}
                </div>
                <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block" value="Login">Add</button>
            </div>
            </form>
        </div>
    </body>
    
{% endblock %}