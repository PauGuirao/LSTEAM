{% extends "base.twig" %}
{% block title %}Send Request page{% endblock %}
{% block instore %}{% endblock %}
{% block content %}
    {% if formWarning %}
        <div class="alert alert-primary position-absolute" role="alert" style="max-width:300px; top:120px; right:20px; opacity: 0.7;">
            {{formWarning}}
        </div>
    {% endif %}

    {% block loginForm %} 
    <body style = "min-height: 100vh; display: flex; flex-direction:column;">
        <div class="signup-form"> 
            <form id="login-form" method="POST">
                <h2>Friend Request</h2>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" name="username" value="{{formData.username}}" required="required">
                    {% if formErrors.username %}
                        <p style="color: #ff6347;">{{ formErrors.username }}</p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block" value="Login">Send</button>
                </div>
            </form>
        </div>
    </body>
    {% endblock %}
{% endblock %}